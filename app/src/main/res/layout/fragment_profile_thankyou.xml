<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.nutrima.nutrimaprotogui.ProfileThankyouFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you!"
                android:textSize="60dp"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/thankyou_textView"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Nice to know you! Now that we know all we need about you, let's start the fun!"
                android:paddingStart="10dp"
                android:layout_alignParentStart="true"
                android:id="@+id/thankyou_statement_textView"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/done_tick"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/thankyou_imageView"/>
    </RelativeLayout>

</FrameLayout>
